{
  "name": "debt-manager-server",
  "version": "1.0.0",
  "description": "Backend API for Debt Manager application",
  "main": "dist/app.js",
  "scripts": {
    "build": "tsc",
    "dev": "ts-node-dev --respawn --transpile-only src/app.ts",
    "start": "node dist/app.js",
    "typeorm": "typeorm-ts-node-commonjs",
    "migration:generate": "npm run typeorm -- migration:generate ./src/migrations/{name}",
    "migration:run": "npm run typeorm -- migration:run",
    "migration:revert": "npm run typeorm -- migration:revert"
  },
  "dependencies": {
    "class-transformer": "0.5.1",
    "class-validator": "0.14.1",
    "compression": "^1.8.1",
    "cors": "2.8.5",
    "dotenv": "16.4.5",
    "express": "4.19.2",
    "helmet": "7.1.0",
    "morgan": "1.10.0",
    "mysql2": "3.11.0",
    "reflect-metadata": "0.2.2",
    "typeorm": "0.3.20",
    "zod": "3.23.8"
  },
  "devDependencies": {
    "@types/cors": "2.8.17",
    "@types/express": "4.17.21",
    "@types/morgan": "1.9.9",
    "@types/node": "20.14.9",
    "ts-node": "10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "5.5.3"
  }
}
